<div class="mt-5 d-flex justify-content-center">
  <div class="shadow p-3 mb-5 bg-white rounded col-md-4 form-group">
  	<a href="<%=tweets_path%>"><svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-left" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
		  <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
		</svg></a>
  	<h3><%= @tweet.title %><br/>
  		<small class="text-muted"><%=@tweet.content%></small><br/>
  		<span class="text-muted" style="font-size: 12px;">Created on : <%=@tweet.created_at.strftime("%d %b, %Y")%></span>
		</h3><br/>
		<div class="dropdown-divider"></div>
		<%= link_to "Retweet", retweet_path(tweet_id: @tweet.id), class: "btn btn-primary btn-sm", style: "color: #fff" %>
		<br/>
		<br/>
  	<%= form_for [@tweet, Comment.new] do |f| %>
		<%= f.text_area :body, placeholder: "Add a comment", class: "form-control" %><br/>
		<%= f.submit "Add Comment", class: "btn btn-primary btn-sm" %>
		<% end %>

		<ul>
		  <%= render(partial: 'comments/comment', collection: @tweet.comments) %>
		</ul>
  </div>
</div>
